#!/bin/bash

LOCAL="$1"
REMOTE="$2"
EXIT=0

if [[ -z $* || $# != "2" ]]; then
  echo -e "Usage: $0 \$LOCAL \$REMOTE"
  exit 1
fi

# See if we have a difftool specified
if command -v _git-difftool &>/dev/null; then
  _git-difftool "$LOCAL" "$REMOTE"
  EXIT=$?
else
  # fallback to vimdiff
  vimdiff -d "$LOCAL" "$REMOTE"
  EXIT=$?
fi
exit $EXIT
